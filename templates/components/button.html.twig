{# Button: primary or secondary. Pass url for link-style button, else use as submit/button. #}
{# variant: 'primary' | 'secondary', type: 'submit' | 'button', label: string, url: optional path #}
{% set base = 'inline-flex items-center justify-center font-medium rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors' %}
{% set primary = base ~ ' bg-neutral-800 text-white hover:bg-neutral-700 focus:ring-neutral-500' %}
{% set secondary = base ~ ' border border-neutral-300 bg-white text-neutral-700 hover:bg-neutral-50 focus:ring-neutral-400' %}
{% set btn_class = variant|default('primary') == 'secondary' ? secondary : primary %}
{% set text = label|default('') %}
{% if url is defined and url is not null %}
<a href="{{ url }}" class="{{ btn_class }} {{ class|default('') }}">{{ text }}</a>
{% else %}
<button type="{{ type|default('submit') }}" class="{{ btn_class }} {{ class|default('') }}">{{ text }}</button>
{% endif %}
