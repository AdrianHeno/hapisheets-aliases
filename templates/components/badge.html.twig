{# Badge: status pill. variant: 'enabled' | 'disabled' | 'success' | 'error' | 'info' #}
{% set styles = {
    enabled: 'bg-emerald-100 text-emerald-800',
    disabled: 'bg-neutral-100 text-neutral-600',
    success: 'bg-emerald-100 text-emerald-800',
    error: 'bg-red-100 text-red-800',
    info: 'bg-sky-100 text-sky-800'
} %}
{% set v = variant|default('enabled') %}
<span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium {{ styles[v] ?? styles.enabled }} {{ class|default('') }}">
    {{ label|default('') }}
</span>
