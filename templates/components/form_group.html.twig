{# Form: label above input, full width, optional inline errors. #}
{# label_for: id of input, label_text: string, required: bool, errors: array of strings #}
<div class="mb-4">
    <label for="{{ label_for|default('') }}" class="block text-sm font-medium text-neutral-700 mb-1">
        {{ label_text }}{% if required|default(false) %}<span class="text-red-500">*</span>{% endif %}
    </label>
    {% block input %}{% endblock %}
    {% if errors is defined and errors|length > 0 %}
        {% include 'components/form_errors.html.twig' with { errors: errors } only %}
    {% endif %}
</div>
