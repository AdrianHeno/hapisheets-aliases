{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <h1>Log in</h1>
    {% if error %}
        <p class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    {% endif %}
    <form method="post" action="{{ path('app_login') }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div>
            <label for="username">Email</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" autocomplete="email" required>
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" autocomplete="current-password" required>
        </div>
        <button type="submit">Log in</button>
    </form>
    <p><a href="{{ path('app_register') }}">Don't have an account? Register</a></p>
{% endblock %}
